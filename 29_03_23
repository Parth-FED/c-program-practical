//pettarn....

#include<stdio.h>
int main()
{
	int i,j,k;
	
	for(i=1;i<=5;i++)
	{
		for(k=1;k<=5;k++)
		{
			printf(" ");
		}
		
		for(j=1;j<=i;j++)
		{
		printf(" * ");
		}
		
		printf("\n");
	}
	
}


