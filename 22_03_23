//fectoniyal by for loop.....

#include<stdio.h>
int main()
{
   int n=1,f=1,i;
   printf("Enter any number:");
   scanf("%d",&n);
  
  for(i=1;i<=n;i++)
  {
  	f=f*i;
  }
  printf("factonial is : %d",f,n);

}


[4]..................................................................................................................
//fectoniyal by while loop.....

#include<stdio.h>
int main()
{
	int i=1,f=1,n;
	printf("Enter any number:");
	scanf("%d",&n);
	
	while(i<=n)
	{
		f=f*i;
		i++;
	}
	printf("factoniyal is :%d ",f,i);
}


