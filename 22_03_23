// copy by string

#include<stdio.h>
int main()
{
	char str1[]=("parth");
	char str2[]=("kotadiya");
	char str3[20];
	strcpy(str3,str1);
	printf("%s",str3);
	strcpy(str3,str2);
	printf("%s",str3);
}
