//for loop

#include<stdio.h>
main()
{
	int a=1;
	for(a=1;a<=10;a++)
	
	{
		printf("welcome to c programming.....\n");
	}
}


[3]'''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''
// even and odd number by while loop

#include<stdio.h>
int main()
{
	int i=0;
	printf("Even number\n");
	while(i <=10)
	{
		printf("%d\n",i);
		i+=2;
	}
	printf("\n Odd number\n");
	i=1;
	 while(i<10)
	 {
	 	printf("%d\n",i);
	 	i+=2;
	 }
	 return 0;
}


