//even or odd number by if else
#include<stdio.h>
int main()
{
	int a;
	printf("\n enter any number :");
	scanf("%d",a);
	
	if(a%2==0)
	{
		printf("\nit is even number");
	}
	else
	{
		printf("\nit is odd number");
	}
}


