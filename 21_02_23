//decisition making stetment (if,if else)

#include<stdio.h>

int main()
{
	int a;
	
	printf("\n enter the age: ");
	scanf("%d",&a);
	
	if(a>=18)
  {
  	printf("\n you are eligible ");
  }
  else;
  {

  	printf("\n you are not eligible ");
  }
}


