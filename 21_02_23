//a,e,i,o,u by if else
#include<stdio.h>
int main()
{
	char op;
	
	printf("\n enter the alphabet : ");
	scanf("%d",&op);
	
	if(op=='a' ||op=='e' ||op=='i' ||op=='o' ||op=='u')
	 
	 printf("\n it is vowel");
	 
	 else
	 {
	 	printf("\n it is consonent");
	 }
}


