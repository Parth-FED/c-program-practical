// nested if:-

#include<stdio.h>

int main()
{
	int a,b,c;
	printf("\n Enter any number : ");
	scanf("%d%d%d", &a,&b,&c);
	
	if(a>b)
	
	 if(a>c)
	 {
	 	printf("\n A is greater");
	 }
	 else
	 {
	 	printf("\n C is greater");
	 }
	 
	 else
	  if(b>c)
	  {
	  	printf("\n B is greater");
	  }
	  else
	  {
	  	printf("\n C is greater");
	  }
	return 0;
}
